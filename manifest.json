{

  "name": "Genius Switch",
  "description": "A tool for editing JS & CSS resources",

  "version": "0.0.3",

  "manifest_version": 2,

  "default_locale": "en",

  "devtools_page": "devtools.html",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*/**",
    "http://*/**",
    "storage"
  ]

}
