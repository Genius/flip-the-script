{

  "name": "Flip the Script",
  "description": "A tool for live-editing JS & CSS resources",

  "version": "0.0.7",

  "manifest_version": 2,

  "default_locale": "en",

  "devtools_page": "devtools.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*/**",
    "http://*/**",
    "storage"
  ]

}
